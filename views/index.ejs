<!-- Blog -->
<section id="blog" class="seperation-padding">
    <h2 class="padding-left-5 padding-bottom-5"><span class="link-color">01.</span> Tech and Fitness Blog</h2>
    <div class="row no-margins">
        <% for(i = 0; i < 3; i++) { %>
        <div class="col l4 overlay no-padding">
            <img class="responsive-img" src="<%- posts[i].feature_image %>" alt="">
            <div class="content padding-2">
                <h3><%- posts[i].title %></h3>
                <% for(t = 0; t < posts[i].tags.length; t++) { %>
                <p><%- posts[i].tags[t].name %></p>
                <% } %>
            </div>
        </div>
        <% } %>
    </div>
    <div class="row">
        <% for(i = 3; i < posts.length; i++) { %>
        <div class="col l3 overlay no-padding">
            <img class="responsive-img" src="<%- posts[i].feature_image %>" alt="">
            <div class="content padding-1">
                <h3><%- posts[i].title %></h3>
                <% for(t = 0; t < posts[i].tags.length; t++) { %>
                <p><%- posts[i].tags[t].name %></p>
                <% } %>
            </div>
        </div>
        <% } %>
    </div>
</section>
<!-- End of Blog -->
<!-- Featured Projects -->
<section id="projects" class="seperation-padding">
    <div class="container">
        <h3 class="padding-left-2 padding-bottom-5"><span class="link-color">01.</span> Featured Projects</h3>
        <% for(let i=0; i < projects.length; i++) { %>
        <div class="row padding-2" id="<%= projects[i].id %>">
            <div class="col l6 <% if (i % 2 == 1 ) { %> push-l6 <% } %> ">
                <img class="responsive-img" src="<%= projects[i].image_url %>" alt="">
            </div>
            <div
                class="col l6 middle <% if (i % 2 == 1 ) { %> pull-l6 <% } %> <% if (i % 2 == 0 ) { %> right-align <% } %>">
                <h3><%= projects[i].name %></h3>
                <p><%= projects[i].description %></p>
                <p><%= projects[i].tech %></p>
                <!-- <a class="waves-effect waves-light social-icon btn-large my-button" href="<%= projects[i].github %>"
                        target="_blank"><i class="material-icons middle">link</i>Learn More</a> -->
                <% if (projects[i].project_link === "") { } else {%>
                <a class="waves-effect waves-light social-icon btn-large my-button"
                    href="<%= projects[i].project_link %>" target="_blank"><i class="material-icons">open_in_new</i></a>
                <% } %>
                <a class="waves-effect waves-light social-icon btn-large my-button" href="<%= projects[i].github %>"
                    target="_blank"> <i class="fa fa-github"></i></a>
            </div>
        </div>
        <% } %>

    </div>
</section>
<!-- End of Featured Projects -->
<!-- About -->
<section id="about" class="container seperation-padding">
    <div class="row">
        <div class="col l6">
            <h3><span class="link-color">02.</span> About Me</h3>
            <p>I'm Patrick, a software engineer from Northwestern, PA.</p>
            <p>I enjoy technology from the inside-out, whether that be building web applications, customizing a PC,
                or anything in between. My goal is to provide great service, learn, and educate others.</p>
            <p>Here are a few technologies I've been working with recently:</p>
            <div class="row list-style">
                <div class="col s12 m5">
                    <h5 class="link-color">Front-End</h5>
                    <ul>
                        <li>HTML & (S)CSS</li>
                        <li>JavaScript (ES6+)</li>
                        <li>React</li>
                    </ul>
                </div>
                <div class="col s12 m4">
                    <h5 class="link-color">Back-End</h5>
                    <ul>
                        <li>PHP</li>
                        <li>NodeJs</li>
                        <li>MySQL</li>
                        <li>SQLite</li>
                        <li>Firebase</li>
                    </ul>
                </div>
                <div class="col s12 m3">
                    <h5 class="link-color">Other</h5>
                    <ul>
                        <li>Laravel / MVC</li>
                        <li>GIT</li>
                        <li>Linux/Ubuntu</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col l4 offset-l1">
            <img class="responsive-img padding-top-5" src="images/avatar.png" alt="Avatar">
        </div>
    </div>
</section>
<!-- End of About -->
<!-- Experience -->
<section id="experience" class="seperation-padding hide">
    <div class="row">
        <div class="col l6 offset-l3">
            <h3><span class="link-color">03.</span> Experience</h3>
            <div class="row">
                <div class="col s12 l3">
                    <ul>
                        <% for(let i=0; i < jobs.length; i++) { %>
                        <li class="border-left padding-left-2 padding-bottom-1 padding-top-1"><%= jobs[i].name %>
                        </li>
                        <% } %>
                    </ul>
                </div>
                <% for(let i=0; i < jobs.length; i++) { %>
                <div id="<%= jobs[i].id %>" class="col s12 l9">
                    <h5><%= jobs[i].position %> <span class="link-color"> - <%= jobs[i].name %></span></h5>
                    <p class="fs-14"><%= jobs[i].date %></p>
                    <ul class="list-style fs-16">
                        <li><%= jobs[i].about %></li><br>
                    </ul>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</section>
<!-- End of Experience -->
